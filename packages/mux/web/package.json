    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/dom-webcodecs": "^0.1.11",
    "@types/qrcode": "^1.5.6",
    "@webgpu/types": "^0.1.69",
    "svelte": "^5.49.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "jmuxer": "^2.1.0",
    "qrcode": "^1.5.4"
  }
}
