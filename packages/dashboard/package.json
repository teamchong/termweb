{
  "name": "termweb-dashboard",
  "version": "0.3.1",
  "description": "Terminal-based system monitoring dashboard powered by termweb",
  "bin": {
    "termweb-dashboard": "bin/cli.js"
  },
  "scripts": {
    "build": "esbuild src/app.js --bundle --minify --outfile=dist/app.bundle.js",
    "build:native": "cd native && zig build -Doptimize=ReleaseFast",
    "start": "node bin/cli.js"
  },
  "files": [
    "bin/",
    "dist/",
    "lib/",
    "native/prebuilt/"
  ],
  "keywords": [
    "terminal",
    "dashboard",
    "system",
    "monitor",
    "cpu",
    "memory",
    "cli"
  ],
  "author": "teamchong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teamchong/termweb.git",
    "directory": "packages/dashboard"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "systeminformation": "^5.21.0",
    "termweb": "^0.9.8",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  }
}
