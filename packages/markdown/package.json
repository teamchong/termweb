{
  "name": "termweb-markdown",
  "version": "0.1.0",
  "description": "Terminal-based Markdown editor powered by termweb",
  "bin": {
    "termweb-markdown": "bin/cli.js"
  },
  "scripts": {
    "build": "esbuild src/app.js --bundle --minify --outfile=dist/app.bundle.js",
    "start": "node bin/cli.js"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "keywords": [
    "terminal",
    "editor",
    "markdown",
    "cli"
  ],
  "author": "teamch",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teamchong/termweb.git",
    "directory": "packages/markdown"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "marked": "^11.1.0",
    "termweb": "^0.9.6"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  }
}
