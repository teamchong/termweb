{
  "manifest_version": 3,
  "name": "Termweb Bridge",
  "version": "1.0.0",
  "description": "Bridge extension for termweb browser rendering",
  "permissions": ["clipboardRead", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "web_accessible_resources": [{
    "resources": ["termweb-bridge.js"],
    "matches": ["<all_urls>"]
  }]
}
